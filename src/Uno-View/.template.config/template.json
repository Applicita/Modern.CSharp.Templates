{
  "$schema": "http://json.schemastore.org/template",
  "author": "VincentH.NET @ Applicita",
  "classifications": [
    "C# Markup 2",
    "C# Markup",
    "Uno C# Markup",
    "CSharpForMarkup",
    "CSharpMarkup",
    "Markup",
    "CSharpMarkup 2",
    "View",
    "Page",
    "MVUX",
    "MVVM",
    "modern",
    "csharp",
    "C#",
    "csharp 12",
    "C# 12",
    "Multi-platform",
    "Uno Platform",
    "Android",
    "iOS",
    "Windows",
    "Mac Catalyst",
    "Linux",
    "WebAssembly",
    "Windows App SDK",
    "WinUI"
  ],
  "name": "C# Markup 2 View for Uno Platform",
  "identity": "Modern.CSharp.Uno.Markup2.View",
  "shortName": "mcs-uno-view",
  "description": "C# Markup 2 View + Model item template for use with mcs-uno-markup2 template",
  "sourceName": "ViewName",
  "defaultName": "New",
  "tags": {
    "language": "C#",
    "type": "item"
  },
  "symbols": {
    "namespace": {
      "type": "parameter",
      "datatype": "string",
      "replaces": "$namespace$",
      "description": "The full namespace for the view",
      "isRequired": true
    },
    "presentation": {
      "description": "Select the model type for the view",
      "type": "parameter",
      "datatype": "choice",
      "isRequired": true,
      "choices": [
        {
          "choice": "none",
          "description": "No model, use code-behind in <name>Page.logic.cs",
          "displayName": "None"
        },
        {
          "choice": "mvvm",
          "description": "Use the Model-View-ViewModel (MVVM) design pattern",
          "displayName": "MVVM"
        },
        {
          "choice": "mvux",
          "description": "Use the Model-View-Update eXtended (MVUX) design pattern",
          "displayName": "MVUX"
        }
      ]
    },
    "csharpversion": {
      "displayName": "C# version",
      "type": "parameter",
      "datatype": "choice",
      "enableQuotelessLiterals": true,
      "defaultValue": "12",
      "description": "Select which C# version (which language features) to use",
      "choices": [
        {
          "choice": "11",
          "displayName": "C# 11",
          "description": "C# 11 (the default for .NET 7)"
        },
        {
          "choice": "12",
          "displayName": "C# 12",
          "description": "C# 12 (the default for .NET 8)"
        }
      ]
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "presentation == 'none'",
          "rename": { "None/": "/" }
        },
        {
          "condition": "presentation != 'none'",
          "exclude": "None/**"
        },
        {
          "condition": "presentation == 'mvux'",
          "rename": { "Mvux/": "/" }
        },
        {
          "condition": "presentation != 'mvux'",
          "exclude": "Mvux/**"
        },
        {
          "condition": "presentation == 'mvvm'",
          "rename": { "Mvvm/": "/" }
        },
        {
          "condition": "presentation != 'mvvm'",
          "exclude": "Mvvm/**"
        }
      ]
    }
  ]
}
